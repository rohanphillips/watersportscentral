<%= form_for (@record) do |f| %>
  <% if current_page?(:controller => 'users', :action => 'new') %>
    <label>Creating New User:</label><br>  
  <% elsif current_page?(:controller => 'users', :action => 'edit')%>
    <label>Editing User:</label><br> 
  <% end %>
  <div class="<%= ' field_with_errors' if @record.errors[:username].any? %>">
    <label>UserName:</label><br>
    <%= label_text_field(@record, f, :username) %><br>
  </div>
  <div class="<%= ' field_with_errors' if @record.errors[:first_name].any? %>">
    <label>First Name:</label><br>
    <%= label_text_field(@record, f, :first_name) %><br>
  </div>
  <label>Last Name:</label><br>
   <%= label_text_field(@record, f, :last_name) %><br>
  <div class="<%= ' field_with_errors' if @record.errors[:email].any? %>">
    <label>Email:</label><br>
    <%= label_text_field(@record, f, :email) %><br>
  </div>
   <% if !current_page?(:controller => 'users', :action => 'new') %>
    <div>
      <label>Active:</label><br>
      <%= f.check_box :active%>
    </div>
  <%end%>
  <% if !current_page?(:controller => 'users', :action => 'new') && is_admin%>
    <div>
      <label>Admin:</label><br>
      <%= f.check_box :admin%>
    </div>
  <%end%>
  <% if !current_page?(:controller => controller_name, :action => 'show', :id => @record.id.to_s) %>
    <div class="<%= ' field_with_errors' if @record.errors[:password].any? %>">
      <label>Password:</label><br>
      <%= f.password_field  :password %><br>
      <%= f.password_field  :password_confirmation %><br> 
    </div>
     <% params[:form_action] = :action %>
  <% else %>
    <% params[:form_action] = "show"%>
  <% end %>
  <%= f.submit  submit_text(@record) %>
<% end %>

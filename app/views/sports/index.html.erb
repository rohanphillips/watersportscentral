<h1>Sports</h1>

<% @sports.each do |s|%>
  <div style="float:left; width: auto;">
    <%= s.name %> <%= s.description%> 
  </div>
  <%if current_user then%> 
    <div style="float:left; width: auto;">
      <%= button_to "Edit", '/sports/' + s.id.to_s + '/edit', method: :get%>
    </div>
  <%end%>
<% end %>
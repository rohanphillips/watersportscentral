<%= form_with model: @record do |e| %>
  <% if current_page?(:controller => controller_name, :action => 'new') %>
    <label>Creating New Event:</label><br>  
  <% elsif current_page?(:controller => controller_name, :action => 'edit')%>
    <label>Editing Event:</label><br> 
  <% end %>
  <div class="<%= ' field_with_errors' if @record.errors[:name].any? %>">
    <label>Event Name:</label><br>
    <%= label_text_field(@record, e, :name) %><br>
  </div>
  <div class="<%= ' field_with_errors' if @record.errors[:name].any? %>">
    <label>Description:</label><br>
    <%= label_text_field(@record, e, :description) %><br>
  </div>
  <label>Sport:</label><br>
  <%= sport_id_field(@record) %><br>
  <label>Date:</label><br>
  <%= label_text_field(@record, e, :date) %><br>
  <label>Location:</label><br>
  <%= location_id_field(@record) %><br>
  <% if !current_page?(:controller => controller_name, :action => 'show', :id => @record.id.to_s) %>
     <% params[:form_action] = :action %>
  <% else %>
    <% params[:form_action] = "show"%>
  <% end %>
  <%if owns_record(@record) then %> 
    <%= e.submit  submit_text(@record) %>
  <%end%>
  
<% end %>
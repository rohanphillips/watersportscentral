<h1>Events</h1>
<div style="float:left; width: auto;">
  <%= button_to "New", '/events/new', method: :get%>
</div>
<br><br>
<% @events.each do |e|%>
  <div style="float:left; width: auto;">
    <%= e.name %> <%= e.description%> 
  </div>
  <%if current_user then%> 
    <div style="float:left; width: auto;">
      <%= button_to "Edit", user_events_path(e) + '/' + e.id.to_s + '/edit', method: :get%>
    </div>
  <%end%>
<% end %>